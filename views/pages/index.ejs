<!DOCTYPE >
<html lang="en">
 <%- include('../layout/head') %>
 <body>
   <main>
   <%- include('../layout/header') %>
    <h1>Books Currently in the Database</h1>
    <h3>Total number of books: <%=booksAmount%></h3>
    <section class="book-view container">
      <ul id="book-list">
        <% savedBooks.forEach(book => { %>
          <li class="book-item" data.id="<%= book.id %>"></li>
            <li class= "images"><img src="<%= book.image_url %>"></li>
            <h4>Book: <%= book.title %></h4>
            <p>Author: <%= book.author %></p>
            <a href="/books/<%=book.id%>">View Details</a>
          </li>
        <% }) %>
      </ul>
    </section>
  </main>
 </body>
</html>


