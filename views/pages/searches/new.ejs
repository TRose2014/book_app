    <h2>Search by Title or Author</h2>
    <form action="/searches/new" method="post" autocomplete="off">
      <input type="text" name="search" placeholder="Enter title or author" required>
      <fieldset>
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required>
        </label>
      </fieldset>
      <fieldset>
        <label for="author">
          <span>Author</span>
          <input type="radio" name="search" value="author" required>
        </label>
      </fieldset>
      <button type="submit">Search the Google Books API</button>
    </form>   
  </main>
