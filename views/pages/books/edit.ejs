<form class="hide-me" action="<%= formAction === 'Add' ? '/book' : `/books/${book.id}` %>" method="post">
  <input type="hidden" name="_method" value="<%= formAction === 'Add' ? 'post' : 'put' %>">
  <input type="text" name="title" value="<%=book.title%>" placeholder="<%= book.title %>" required>
  <input type="text" name="author" value="<%=book.author%>" placeholder="<%= book.author %>" required>
  <input type="text" name="isbn" value="<%=book.isbn%>" placeholder="<%= book.isbn %>" required>
  <textarea name="description" placeholder="<%=book.description%>" cols="30" rows="10" required><%=book.description%></textarea>
  <input type="text" name="bookshelf" placeholder="Enter bookshelf/category" required>
  <button class="submitForm" type="submit"><%=formAction%>Update Book to Database</button>
</form>