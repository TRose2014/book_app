<section id="bookSearch" class="showBook">
    <ul>
      <% searchResults.forEach(book => { %>
        <img src="<%= book.image_url %>" alt="<%= book.title %> picture not available">
        <h2><span>Book:</span> <%= book.title %> </h2>
        <h3><span>Author:</span> <%= book.author %></h3>
        <p>ISBN: <%= book.isbn %></p>
        <p>Description: <%= book.description %></p>
        <p>Bookshelf: <%= book.bookshelf %></p>
        
         <form class= "hide-me" action="/books" method="post">
            <input type="text" name="title" value="<%=book.title%>">
            <input type="text" name="author" value="<%=book.author%>">
            <input type="text" name="isbn" value="<%=book.isbn%>">
            <textarea name="description" cols="30" rows="10"><%-book.description%></textarea>
            <input type="text" name="bookshelf" placeholder="Fantasy" required>
            <button action="/books" method="put" type="submit">Add to database</button>
         </form>
      <% }) %>
    </ul>
</section>